
.b-btn__group
	display flex
	position relative

.b-btn__group .b-btn
	if $site_border-radius != 0
		border-radius 0

	if $site_border-radius != 0
		&:first-of-type
			border-radius $site_border-radius 0 0 $site_border-radius

		&:last-of-type
			border-radius 0 $site_border-radius $site_border-radius 0
