
.b-btn__group
	display flex
	position relative

.b-btn__group .b-btn
	margin-left 0
	margin-right 2px

	if $site_border-radius != 0
		border-radius 0

	&:first-of-type
		margin-left 5px

		if $site_border-radius != 0
				border-radius $site_border-radius 0 0 $site_border-radius

	&:last-of-type
		margin-right 5px

		if $site_border-radius != 0
			border-radius 0 $site_border-radius $site_border-radius 0
