
.b-form__field
	background $white
	border 2px solid lighten($grey,20%)
	color $black
	width 100%
	padding 5px
	transition border 0.5s ease 0s
	box-shadow 0 0 0 rgba(0,0,0,0)

	if $site_border-radius != 0
		border-radius $site_border-radius

	&:focus
		border-color $blue

.b-form__field_textarea
	min-height 50px
	max-width 100%
	min-width 100%

.b-form__field_valid
	border-color $green

.b-form__field_invalid
	border-color $red
