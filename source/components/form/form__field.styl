
.b-form__field
	padding 5px
	width 100%
	border 2px solid $graylight
	box-shadow 0 0 0 rgba(0, 0, 0, 0)
	background $white
	color $black
	transition border .5s ease 0

	if $site_border-radius != 0
		border-radius $site_border-radius

	&:focus
		border-color $blue

.b-form__field_textarea
	min-width 100%
	min-height 50px
	max-width 100%

.b-form__field_valid
	border-color $green

.b-form__field_invalid
	border-color $red
