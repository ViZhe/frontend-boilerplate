
.b-form__append
	display flex

if $site_border-radius != 0
	.b-form__append
		& :first-child
			border-radius $site_border-radius 0 0 $site_border-radius

		& :last-child
			border-radius 0 $site_border-radius $site_border-radius 0

.b-form__append	.b-form__field
	border-radius 0
	min-width 10%
	flex 1

.b-form__append	.b-form__addon
	margin 0
