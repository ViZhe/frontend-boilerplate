
.btn
  user-select: none
  display: inline-block
  padding: .5rem 1rem
  border: 0
  border-radius: 4px
  background-color: $blue
  color: $white
  vertical-align: bottom
  text-decoration: none
  font-weight: 700
  font-size: 14px
  line-height: 1.7
  cursor: pointer
  transition: all .2s

  &:hover
  &:focus
    background-color: lighten($blue, 10%)
    color: $white
    text-decoration: none

.btn + .btn
  margin-left: 8px
