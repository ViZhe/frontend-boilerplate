
.formField
  display: block
  margin: .5rem 0 1rem

  &:first-of-type
    margin-top: 0

.formField__title
  margin-bottom: .5rem

.formField__input
  padding: 0 .5rem
  width: 100%
  height: 32px
  border: 0
  border-radius: 0
  background: $white
  box-shadow: 0 -1px 0 0 rgba($black, .15), 0 0 0 1px rgba($black, .15), inset 0 1px 0 0 rgba($black, .05)
  color: #222
  font-size: 14px
  transition: box-shadow .3s ease

  &_textarea
    padding: .5rem
    min-height: 64px
    height: auto
    resize: vertical

  &:hover
    box-shadow: 0 -1px 0 0 rgba($black, .15), 0 0 0 1px rgba($black, .25), inset 0 1px 0 0 rgba($black, .05)

  &:focus
  &_style_warning
  &_style_error
    outline: 2px solid #5199DB
    box-shadow: inset 0 1px 0 0 rgba($black, .05) !important

  &:focus
    &::placeholder
      color: #cdcdcd

  &_style_warning
    outline-color: #F69C00 !important

  &_style_error
    outline-color: #DA0C09 !important

  &:disabled
    background: #F2F2F2
    box-shadow: 0 0 0 1px rgba($black, .15)
    color: #a0a0a0
