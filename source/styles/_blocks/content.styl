
.content
  & p
    margin-bottom: rem(20px)

    &:last-child
      margin-bottom: 0

  & b
    font-weight: 700

  & i
    font-style: italic

  & iframe
    max-width: 100%

  & hr
    margin: rem(20px) 0
    border: 1px none $graylight
    border-top-style: solid

  & blockquote
    margin: rem(20px) rem(30px)
    padding: em(10px) em(15px)
    border-left: 5px solid $green
    color: #333
    font-size: 1.2em

  & ul
  & ol
    margin-bottom: rem(20px)
    margin-left: rem(10px)
    padding: 0
    list-style-position: inside

    & li
      margin-bottom: em(5px)

  & table
    margin-bottom: em(20px)
    width: 100%

    & thead
      border: 1px solid $graylight
      border-bottom-width: 2px
      color: lighten($black, 30%)

      & th
        padding: 10px

    & tbody
      & td
      & th
        padding: em(5px) em(10px)
        border: 1px solid $graylight

  &__image
    margin: rem(20px) rem(5px)
    text-align: center

  &__imageRight
    float: right
    margin: rem(5px) 0 rem(10px) rem(10px)

  &__imageLeft
    float: left
    margin: rem(5px) rem(10px) rem(10px) 0
