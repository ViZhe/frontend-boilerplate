
$gridSystem = {
  'xl': 1232px,
  'lg': 992px,
  'md': 752px,
  'sm': '',
  'xs': ''
}

.l-box
  margin-right: auto
  margin-left: auto

.l-row
  display: flex
  flex-wrap: wrap

.l-col
  max-width: 100%

-grid-inner($width, $space, $mod = '')
  $width = $width || 100%
  $space = $space || 16px

  .l-box
    width: $width

  .l-row .l-row
    margin-right: -($space)
    margin-left: -($space)

  .l-col
    padding-right: $space
    padding-left: $space

  .l-col_auto{$mod}
    flex: auto
    max-width: 100%

  .l-col_0{$mod}
    flex: 1
    max-width: 100%

  for $i in 1..5
    .l-col_{$i}{$mod}
      flex: 0 (1/$i) * 100%
      max-width: (1/$i) * 100%

for $key, $args in $gridSystem
  $index = index(keys($gridSystem), $key)
  if $index == '0'
    -grid-inner($args[0], $args[1])
  else
    $mod = '_' + $key
    +media('max', $key)
      -grid-inner($args[0], $args[1], $mod)
