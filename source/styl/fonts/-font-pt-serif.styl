@font-face
    font-weight 400
    font-style normal
    font-family 'PT Serif'
    src local('PT Serif'), local('PTSerif-Regular'),
    url('./font-pt-serif_normal.woff') format('woff')

@font-face
    font-weight 400
    font-style italic
    font-family 'PT Serif'
    src local('PT Serif Italic'), local('PTSerif-Italic'),
    url('./font-pt-serif_italic.woff') format('woff')

@font-face
    font-weight 700
    font-style normal
    font-family 'PT Serif'
    src local('PT Serif Bold'), local('PTSerif-Bold'),
    url('./font-pt-serif_bold.woff') format('woff')
